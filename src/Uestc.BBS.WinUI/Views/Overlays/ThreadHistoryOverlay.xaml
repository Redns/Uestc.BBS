    d:DataContext="{d:DesignInstance Type=viewmodels:ThreadHistoryViewModel}"
    mc:Ignorable="d">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:StringVisibilityConverter x:Key="StringVisibilityConverter" />
        <converters:CollectionVisibilityConverter x:Key="CollectionVisibilityConverter" />
        <local_converters:Double2GridLength x:Key="Double2GridLength" />
        <local_converters:Date2RelativeStringConverter x:Key="Date2RelativeStringConverter" />
    </UserControl.Resources>

    <Grid
        Margin="10,10,0,15"
        ColumnSpacing="10"
        RowSpacing="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{x:Bind ViewModel.BoardTabWidth, Converter={StaticResource Double2GridLength}}" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  筛选  -->
        <controls:DockPanel
            Grid.ColumnSpan="2"
            HorizontalSpacing="8"
            LastChildFill="False">
            <CalendarDatePicker PlaceholderText="起始时间" />
            <CalendarDatePicker PlaceholderText="结束时间" />
            <ComboBox PlaceholderText="主题版块">
                <ComboBoxItem Content="全部" />
                <ComboBoxItem Content="技术" />
                <ComboBoxItem Content="生活" />
                <ComboBoxItem Content="文学" />
                <ComboBoxItem Content="体育" />
                <ComboBoxItem Content="其他" />
            </ComboBox>
            <TextBlock controls:DockPanel.Dock="Right" Text="1788" />
        </controls:DockPanel>
        <!--  主题列表  -->
        <Grid Grid.Row="1">
            <ListView
                IsItemClickEnabled="True"
                ItemsSource="{x:Bind ThreadHistoryEntities}"
                ScrollViewer.VerticalScrollBarVisibility="Hidden"
                SelectedValue="{x:Bind ViewModel.CurrentThreadHistory, Mode=TwoWay}"
                SelectionMode="None">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Padding" Value="0" />
                        <Setter Property="Margin" Value="0,0,0,10" />
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsStackPanel />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="entities:ThreadHistoryEntity">
                        <Border
                            Padding="10"
                            Background="{ThemeResource SolidBackgroundFillColorQuarternaryBrush}"
                            CornerRadius="10">
                            <StackPanel Spacing="8">
                                <!--  头像、昵称、发布/回复时间、分区  -->
                                <controls:DockPanel HorizontalSpacing="10">
                                    <local_controls:Avatar
                                        VerticalAlignment="Center"
                                        controls:DockPanel.Dock="Left"
                                        Size="36"
                                        Source="{x:Bind UserAvatar, Mode=OneWay}" />
                                    <StackPanel VerticalAlignment="Center" controls:DockPanel.Dock="Left">
                                        <TextBlock Text="{x:Bind Username, Mode=OneWay}" />
                                        <!--  浏览时间  -->
                                        <TextBlock
                                            FontSize="12"
                                            Foreground="Gray"
                                            Text="{x:Bind BrowserDateTime, Converter={StaticResource Date2RelativeStringConverter}, Mode=OneWay}" />
                                    </StackPanel>
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        FontSize="12"
                                        Foreground="{ThemeResource AccentTextFillColorTertiaryBrush}"
                                        Text="{x:Bind BoardName, Mode=OneWay}"
                                        TextAlignment="Right" />
                                </controls:DockPanel>
                                <!--  标题  -->
                                <TextBlock
                                    FontSize="16"
                                    Text="{x:Bind Title, Mode=OneWay}"
                                    TextWrapping="Wrap"
                                    Visibility="{x:Bind Title, Converter={StaticResource StringVisibilityConverter}, Mode=OneWay}" />
                                <!--  摘要  -->
                                <TextBlock
                                    Foreground="Gray"
                                    Text="{x:Bind Subject, Mode=OneWay}"
                                    TextWrapping="Wrap"
                                    Visibility="{x:Bind Subject, Converter={StaticResource StringVisibilityConverter}, Mode=OneWay}" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <ProgressRing
                Margin="0,20,0,0"
                VerticalAlignment="Top"
                IsActive="{x:Bind ThreadHistoryEntities.IsLoading, Mode=OneWay}" />
        </Grid>
