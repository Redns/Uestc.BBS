<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Uestc.BBS.WinUI.Views.Overlays.AccountSettingOverlay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Uestc.BBS.WinUI.Views.Overlays"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:CommunityToolkit.WinUI"
    xmlns:viewmodels="using:Uestc.BBS.WinUI.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:AccountSettingsViewModel}"
    mc:Ignorable="d">

    <ScrollViewer Margin="10" VerticalScrollBarVisibility="Hidden">
        <StackPanel Spacing="5">
            <controls:SettingsCard
                Description="密码或凭证有效时跳过登录页面"
                Header="自动登录"
                HeaderIcon="{ui:FontIcon Glyph=&#xE930;}">
                <ToggleSwitch IsOn="{x:Bind ViewModel.AccountSettingModel.AutoLogin, Mode=TwoWay}" />
            </controls:SettingsCard>
            <controls:SettingsCard
                Description="关闭后登陆成功时仅保存密钥"
                Header="记住密码"
                HeaderIcon="{ui:FontIcon Glyph=&#xE8D7;}">
                <ToggleSwitch IsOn="{x:Bind ViewModel.AccountSettingModel.RememberPassword, Mode=TwoWay}" />
            </controls:SettingsCard>
        </StackPanel>
    </ScrollViewer>

</Page>
