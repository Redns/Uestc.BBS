<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Uestc.BBS.WinUI.Views.Overlays.AccountSettingOverlay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:converters="using:CommunityToolkit.WinUI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Uestc.BBS.WinUI.Views.Overlays"
    xmlns:local_controls="using:Uestc.BBS.WinUI.Controls"
    xmlns:local_converters="using:Uestc.BBS.WinUI.Converters"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Uestc.BBS.Mvvm.Models"
    xmlns:ui="using:CommunityToolkit.WinUI"
    xmlns:viewmodels="using:Uestc.BBS.WinUI.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:AccountSettingsViewModel}"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:StringFormatConverter x:Key="StringFormatConverter" />
        <converters:StringVisibilityConverter x:Key="StringVisibilityConverter" />
        <converters:DoubleToVisibilityConverter x:Key="DoubleToVisibilityConverter" GreaterThan="0" />
        <local_converters:UserGroup2Visibility x:Key="UserGroup2Visibility" />
        <local_converters:UserGroup2BadgeBrush x:Key="UserGroup2BadgeBrush" />
        <local_converters:UserLevel2BadgeBackground x:Key="UserLevel2BadgeBackground" />
        <local_converters:Uid2Avatar x:Key="Uid2Avatar" BaseUri="{x:Bind ApiBaseUri, Mode=OneWay}" />
    </Page.Resources>

    <ScrollViewer Margin="10" VerticalScrollBarVisibility="Hidden">
        <StackPanel Spacing="5">
            <ItemsRepeater ItemsSource="{x:Bind ViewModel.AccountSettingModel.Credentials, Mode=OneWay}">
                <ItemsRepeater.Layout>
                    <UniformGridLayout MinColumnSpacing="6" MinRowSpacing="6" />
                </ItemsRepeater.Layout>
                <ItemsRepeater.ItemTemplate>
                    <DataTemplate x:DataType="models:AuthCredentialModel">
                        <StackPanel
                            Padding="8"
                            Background="{ThemeResource SolidBackgroundFillColorQuarternaryBrush}"
                            BorderThickness="1"
                            CornerRadius="5"
                            Orientation="Horizontal"
                            Spacing="10">
                            <local_controls:Avatar Size="44" Source="{x:Bind Uid, Converter={StaticResource Uid2Avatar}}" />
                            <StackPanel Spacing="5">
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <!--  用户名  -->
                                    <TextBlock
                                        FontSize="14"
                                        FontWeight="SemiBold"
                                        Text="{x:Bind Username}" />
                                    <!--  等级  -->
                                    <Border
                                        Height="18"
                                        Padding="3,0"
                                        Background="{x:Bind Level, Converter={StaticResource UserLevel2BadgeBackground}, Mode=OneWay}"
                                        CornerRadius="3"
                                        Visibility="{x:Bind Level, Converter={StaticResource DoubleToVisibilityConverter}, Mode=OneWay}">
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            FontSize="12"
                                            Foreground="White"
                                            Text="{x:Bind Level, Converter={StaticResource StringFormatConverter}, ConverterParameter='Lv.{0}', Mode=OneWay}"
                                            TextLineBounds="Tight" />
                                    </Border>
                                    <!--  用户组  -->
                                    <Border
                                        Height="18"
                                        Padding="3,0"
                                        Background="{x:Bind Group, Converter={StaticResource UserGroup2BadgeBrush}, Mode=OneWay}"
                                        CornerRadius="3"
                                        Visibility="{x:Bind Group, Converter={StaticResource UserGroup2Visibility}, Mode=OneWay}">
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            FontSize="12"
                                            Foreground="White"
                                            Text="{x:Bind Group, Mode=OneWay}"
                                            TextLineBounds="Tight" />
                                    </Border>
                                    <!--  登陆状态  -->
                                    <FontIcon
                                        FontSize="14"
                                        Foreground="{ThemeResource SystemFillColorSuccessBrush}"
                                        Glyph="&#xEC75;" />
                                    <FontIcon
                                        VerticalAlignment="Center"
                                        FontSize="14"
                                        Foreground="{ThemeResource SystemFillColorSuccessBrush}"
                                        Glyph="&#xE774;" />
                                </StackPanel>
                                <!--  用户签名  -->
                                <TextBlock
                                    FontSize="12"
                                    Foreground="Gray"
                                    Text="{x:Bind Signature}" />
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ItemsRepeater.ItemTemplate>
            </ItemsRepeater>
            <controls:SettingsCard
                Description="凭证失效时自动重新获取"
                Header="自动登录"
                HeaderIcon="{ui:FontIcon Glyph=&#xE930;}">
                <ToggleSwitch IsOn="{x:Bind ViewModel.AccountSettingModel.AutoLogin, Mode=TwoWay}" />
            </controls:SettingsCard>
            <controls:SettingsCard
                Description="登录成功后保存密码"
                Header="记住密码"
                HeaderIcon="{ui:FontIcon Glyph=&#xE8D7;}">
                <ToggleSwitch IsOn="{x:Bind ViewModel.AccountSettingModel.RememberPassword, Mode=TwoWay}" />
            </controls:SettingsCard>
        </StackPanel>
    </ScrollViewer>

</Page>
