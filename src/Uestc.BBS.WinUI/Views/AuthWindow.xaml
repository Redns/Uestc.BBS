<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="Uestc.BBS.WinUI.Views.AuthWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:core="using:Uestc.BBS.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Uestc.BBS.WinUI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="清水河畔"
    mc:Ignorable="d">

    <Window.SystemBackdrop>
        <MicaBackdrop Kind="Base" />
    </Window.SystemBackdrop>

    <StackPanel Margin="25,35,25,0" Orientation="Vertical">
        <controls:DockPanel x:Name="AppTitleBar" controls:DockPanel.Dock="Right">
            <FontIcon Glyph="&#xE711;" />
        </controls:DockPanel>
        <Image Height="50" Source="/Assets/Icons/auth_icon.png" />
        <AutoSuggestBox
            Margin="0,18,0,0"
            PlaceholderText="用户名"
            Text="{x:Bind _viewModel.Username, Mode=TwoWay}"
            TextChanged="Username_AutoSuggestBox_TextChanged">
            <AutoSuggestBox.ItemTemplate>
                <DataTemplate x:DataType="core:AuthCredential">
                    <controls:DockPanel
                        Margin="0,5"
                        HorizontalSpacing="10"
                        LastChildFill="False">
                        <PersonPicture
                            Height="32"
                            controls:DockPanel.Dock="Left"
                            ProfilePicture="{x:Bind Avatar, Mode=OneTime}" />
                        <StackPanel VerticalAlignment="Center" controls:DockPanel.Dock="Left">
                            <TextBlock VerticalAlignment="Center" Text="{x:Bind Name, Mode=OneTime}" />
                            <TextBlock
                                FontSize="12"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="{x:Bind Uid, Mode=OneTime}" />
                        </StackPanel>
                        <FontIcon
                            controls:DockPanel.Dock="Right"
                            FontSize="16"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            Glyph="&#xE74D;"
                            ToolTipService.ToolTip="删除用户信息" />
                    </controls:DockPanel>
                </DataTemplate>
            </AutoSuggestBox.ItemTemplate>
        </AutoSuggestBox>
        <TextBlock
            Height="18"
            FontSize="10"
            Foreground="{ThemeResource AccentTextFillColorTertiaryBrush}"
            Text="{x:Bind _viewModel.UsernameMessage, Mode=OneWay}" />
        <PasswordBox Password="{x:Bind _viewModel.Password, Mode=TwoWay}" PlaceholderText="密码" />
        <TextBlock
            Height="18"
            FontSize="10"
            Foreground="{ThemeResource AccentTextFillColorTertiaryBrush}"
            Text="{x:Bind _viewModel.PasswordMessage, Mode=OneWay}" />
        <StackPanel Orientation="Horizontal">
            <CheckBox
                Margin="0,0,-15,0"
                Content="记住密码"
                IsChecked="{x:Bind _viewModel.RememberPassword}" />
            <CheckBox Content="自动登录" IsChecked="{x:Bind _viewModel.AutoLogin}" />
        </StackPanel>
        <Button
            Height="38"
            Margin="0,12,0,0"
            HorizontalAlignment="Stretch"
            VerticalContentAlignment="Center"
            Command="{x:Bind _viewModel.LoginCommand}"
            IsEnabled="{Binding !IsLoging, Mode=OneWay}"
            Style="{StaticResource AccentButtonStyle}">
            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                <ProgressRing
                    Width="25"
                    Height="25"
                    Foreground="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    Visibility="Visible" />
                <TextBlock
                    Name="LoginButtonText"
                    VerticalAlignment="Center"
                    Text="登 录"
                    Visibility="Collapsed" />
            </StackPanel>
        </Button>
    </StackPanel>
</Window>
