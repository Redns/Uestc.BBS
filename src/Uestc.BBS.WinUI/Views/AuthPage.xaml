<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Uestc.BBS.WinUI.Views.AuthPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:converters="using:CommunityToolkit.WinUI.Converters"
    xmlns:core="using:Uestc.BBS.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:Uestc.BBS.WinUI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">
    <Page.Resources>
        <converters:BoolNegationConverter x:Key="BoolNegationConverter" />
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Page.Resources>

    <StackPanel
        Grid.Row="1"
        Margin="25,10,25,0"
        Orientation="Vertical">
        <Image
            Height="50"
            Source="/Assets/Icons/auth_icon.png"
            ToolTipService.ToolTip="前往官方论坛">
            <interactivity:Interaction.Behaviors>
                <interactivity:EventTriggerBehavior EventName="PointerPressed">
                    <interactivity:EventTriggerBehavior.Actions>
                        <interactivity:InvokeCommandAction Command="{x:Bind _viewModel.OpenOfficialWebsiteCommand}" />
                    </interactivity:EventTriggerBehavior.Actions>
                </interactivity:EventTriggerBehavior>
            </interactivity:Interaction.Behaviors>
        </Image>
        <!--  用户名  -->
        <AutoSuggestBox
            Margin="0,18,0,0"
            PlaceholderText="用户名"
            Text="{x:Bind _viewModel.Username, Mode=TwoWay}"
            TextChanged="Username_AutoSuggestBox_TextChanged">
            <interactivity:Interaction.Behaviors>
                <interactivity:EventTriggerBehavior EventName="SuggestionChosen">
                    <interactivity:EventTriggerBehavior.Actions>
                        <interactivity:InvokeCommandAction Command="{x:Bind _viewModel.SelectCredentialCommand}" />
                    </interactivity:EventTriggerBehavior.Actions>
                </interactivity:EventTriggerBehavior>
            </interactivity:Interaction.Behaviors>
            <AutoSuggestBox.ItemTemplate>
                <DataTemplate x:DataType="core:AuthCredential">
                    <controls:DockPanel
                        Margin="0,5"
                        HorizontalSpacing="10"
                        LastChildFill="False">
                        <PersonPicture Width="32" ProfilePicture="{x:Bind Avatar, Mode=OneTime}" />
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock VerticalAlignment="Center" Text="{x:Bind Name, Mode=OneTime}" />
                            <TextBlock
                                FontSize="12"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="{x:Bind Uid, Mode=OneTime}" />
                        </StackPanel>
                        <AppBarButton
                            Width="40"
                            Height="47"
                            controls:DockPanel.Dock="Right"
                            ToolTipService.ToolTip="删除账号信息">
                            <FontIcon Glyph="&#xE74D;" />
                        </AppBarButton>
                    </controls:DockPanel>
                </DataTemplate>
            </AutoSuggestBox.ItemTemplate>
        </AutoSuggestBox>
        <TextBlock
            Height="18"
            FontSize="10"
            Foreground="{ThemeResource AccentTextFillColorTertiaryBrush}"
            Text="{x:Bind _viewModel.UsernameMessage, Mode=OneWay}" />
        <!--  密码  -->
        <PasswordBox Password="{x:Bind _viewModel.Password, Mode=TwoWay}" PlaceholderText="密码" />
        <TextBlock
            Height="18"
            FontSize="10"
            Foreground="{ThemeResource AccentTextFillColorTertiaryBrush}"
            Text="{x:Bind _viewModel.PasswordMessage, Mode=OneWay}" />
        <!--  记住密码、自动登录  -->
        <StackPanel Orientation="Horizontal">
            <CheckBox
                Margin="0,0,-15,0"
                Content="记住密码"
                IsChecked="{x:Bind _viewModel.RememberPassword, Mode=TwoWay}" />
            <CheckBox Content="自动登录" IsChecked="{x:Bind _viewModel.AutoLogin, Mode=TwoWay}" />
        </StackPanel>
        <Button
            Height="38"
            Margin="0,12,0,0"
            HorizontalAlignment="Stretch"
            VerticalContentAlignment="Center"
            Command="{x:Bind _viewModel.LoginCommand}"
            Style="{StaticResource AccentButtonStyle}">
            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                <ProgressRing
                    Width="25"
                    Height="25"
                    Foreground="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    Visibility="{x:Bind _viewModel.LoginCommand.IsRunning, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}" />
                <TextBlock
                    Name="LoginButtonText"
                    VerticalAlignment="Center"
                    Text="登 录"
                    Visibility="{x:Bind _viewModel.LoginCommand.IsRunning, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=True, Mode=OneWay}" />
            </StackPanel>
        </Button>
    </StackPanel>
</Page>
