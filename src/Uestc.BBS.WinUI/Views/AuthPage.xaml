<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Uestc.BBS.WinUI.Views.AuthPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:converters="using:CommunityToolkit.WinUI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:Uestc.BBS.WinUI.Views"
    xmlns:local_controls="using:Uestc.BBS.WinUI.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Uestc.BBS.Mvvm.Models"
    xmlns:viewmodels="using:Uestc.BBS.WinUI.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:AuthViewModel}"
    mc:Ignorable="d">
    <Page.Resources>
        <converters:BoolNegationConverter x:Key="BoolNegationConverter" />
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Page.Resources>

    <StackPanel
        Grid.Row="1"
        Margin="25,10,25,0"
        Orientation="Vertical">
        <Image
            Height="50"
            Source="/Assets/Icons/auth_icon.png"
            ToolTipService.ToolTip="前往官方论坛">
            <interactivity:Interaction.Behaviors>
                <interactivity:EventTriggerBehavior EventName="PointerPressed">
                    <interactivity:EventTriggerBehavior.Actions>
                        <interactivity:InvokeCommandAction Command="{x:Bind ViewModel.OpenOfficialWebsiteCommand}" />
                    </interactivity:EventTriggerBehavior.Actions>
                </interactivity:EventTriggerBehavior>
            </interactivity:Interaction.Behaviors>
        </Image>
        <!--  用户名  -->
        <AutoSuggestBox
            x:Name="UsernameAutoSuggestBox"
            Margin="0,18,0,0"
            PlaceholderText="用户名"
            SuggestionChosen="SelectAuthCredential"
            Text="{x:Bind ViewModel.Username, Mode=TwoWay}"
            TextChanged="FilterAuthCredentials">
            <AutoSuggestBox.ItemTemplate>
                <DataTemplate x:DataType="models:AuthCredentialModel">
                    <controls:DockPanel
                        Margin="0,5"
                        HorizontalSpacing="10"
                        LastChildFill="False">
                        <local_controls:Avatar Size="32" Source="{x:Bind Avatar, Mode=OneWay}" />
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock VerticalAlignment="Center" Text="{x:Bind Username, Mode=OneWay}" />
                            <TextBlock
                                FontSize="12"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="{x:Bind Uid, Mode=OneWay}" />
                        </StackPanel>
                        <AppBarButton
                            Width="40"
                            Height="47"
                            controls:DockPanel.Dock="Right"
                            Click="DeleteAuthCredential"
                            Tag="{Binding}"
                            ToolTipService.ToolTip="删除账号信息">
                            <FontIcon Glyph="&#xE74D;" />
                        </AppBarButton>
                    </controls:DockPanel>
                </DataTemplate>
            </AutoSuggestBox.ItemTemplate>
        </AutoSuggestBox>
        <TextBlock
            Height="18"
            FontSize="10"
            Foreground="{ThemeResource AccentTextFillColorTertiaryBrush}"
            Text="{x:Bind ViewModel.UsernameMessage, Mode=OneWay}" />
        <!--  密码  -->
        <PasswordBox Password="{x:Bind ViewModel.Password, Mode=TwoWay}" PlaceholderText="密码">
            <PasswordBox.KeyboardAccelerators>
                <KeyboardAccelerator
                    Key="Enter"
                    Invoked="EnterToLogin"
                    Modifiers="None" />
            </PasswordBox.KeyboardAccelerators>
        </PasswordBox>
        <TextBlock
            Height="18"
            FontSize="10"
            Foreground="{ThemeResource AccentTextFillColorTertiaryBrush}"
            Text="{x:Bind ViewModel.PasswordMessage, Mode=OneWay}" />
        <!--  记住密码、自动登录  -->
        <StackPanel Orientation="Horizontal">
            <CheckBox
                Margin="0,0,-15,0"
                Content="记住密码"
                IsChecked="{x:Bind ViewModel.AppSettingModel.Account.RememberPassword, Mode=TwoWay}" />
            <CheckBox Content="自动登录" IsChecked="{x:Bind ViewModel.AppSettingModel.Account.AutoLogin, Mode=TwoWay}" />
        </StackPanel>
        <Button
            Height="38"
            Margin="0,12,0,0"
            HorizontalAlignment="Stretch"
            VerticalContentAlignment="Center"
            Command="{x:Bind ViewModel.LoginCommand}"
            Style="{StaticResource AccentButtonStyle}">
            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                <ProgressRing
                    Width="25"
                    Height="25"
                    Foreground="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    Visibility="{x:Bind ViewModel.LoginCommand.IsRunning, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}" />
                <TextBlock
                    Name="LoginButtonText"
                    VerticalAlignment="Center"
                    Text="登 录"
                    Visibility="{x:Bind ViewModel.LoginCommand.IsRunning, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=True, Mode=OneWay}" />
            </StackPanel>
        </Button>
    </StackPanel>
</Page>
