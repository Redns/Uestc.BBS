<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Uestc.BBS.WinUI.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animatedvisuals="using:AnimatedVisuals"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:converters="using:CommunityToolkit.WinUI.Converters"
    xmlns:core="using:Uestc.BBS.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="using:Uestc.BBS.WinUI.Helpers"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:local_controls="using:Uestc.BBS.WinUI.Controls"
    xmlns:local_converters="using:Uestc.BBS.WinUI.Converters"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Uestc.BBS.Mvvm.Models"
    xmlns:thread="using:Uestc.BBS.Sdk.Services.Thread"
    xmlns:ui="using:CommunityToolkit.WinUI"
    xmlns:vm="using:Uestc.BBS.WinUI.ViewModels"
    d:DataContext="{d:DesignInstance Type=vm:HomeViewModel}"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:StringFormatConverter x:Key="StringFormatConverter" />
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:StringVisibilityConverter x:Key="StringVisibilityConverter" />
        <converters:DoubleToVisibilityConverter x:Key="DoubleToVisibilityConverter" GreaterThan="0" />
        <local_converters:Null2Visibility x:Key="Null2Visibility" />
        <local_converters:Double2GridLength x:Key="Double2GridLength" />
        <local_converters:Date2RelativeStringConverter x:Key="Date2RelativeStringConverter" />
        <!--  BoardSwitch  -->
        <!--  BoardSwitch Right2Left  -->
        <Storyboard x:Name="BoardSwitchRight2LeftStoryboard">
            <DoubleAnimation
                Storyboard.TargetName="BoardSwitchTranslation"
                Storyboard.TargetProperty="X"
                From="200"
                To="0"
                Duration="0:0:0.4">
                <DoubleAnimation.EasingFunction>
                    <QuinticEase />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        <!--  BoardSwitch Left2Right  -->
        <Storyboard x:Name="BoardSwitchLeft2RightStoryboard">
            <DoubleAnimation
                Storyboard.TargetName="BoardSwitchTranslation"
                Storyboard.TargetProperty="X"
                From="-200"
                To="0"
                Duration="0:0:0.4                 ">
                <DoubleAnimation.EasingFunction>
                    <QuinticEase />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </Page.Resources>

    <Grid
        Margin="10,0,0,15"
        ColumnSpacing="10"
        RowSpacing="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{x:Bind ViewModel.AppSettingModel.Appearance.BoardTab.Width, Converter={StaticResource Double2GridLength}, Mode=TwoWay}" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  板块列表  -->
        <controls:Segmented
            HorizontalAlignment="Center"
            IsItemClickEnabled="True"
            ItemsSource="{x:Bind ViewModel.AppSettingModel.Appearance.BoardTab.Items, Mode=OneWay}"
            SelectedItem="{x:Bind ViewModel.CurrentBoardTabItemModel, Mode=TwoWay}"
            Style="{StaticResource PivotSegmentedStyle}">
            <controls:Segmented.ItemTemplate>
                <DataTemplate x:DataType="models:BoardTabItemModel">
                    <TextBlock
                        Width="auto"
                        Margin="-3,0"
                        PointerPressed="RefreshBoardTabItems"
                        Text="{x:Bind Name}" />
                </DataTemplate>
            </controls:Segmented.ItemTemplate>
            <!--  Native-AOT 编译后失效  -->
            <!--<interactivity:Interaction.Behaviors>
                <interactivity:EventTriggerBehavior EventName="ItemClick">
                    <interactivity:EventTriggerBehavior.Actions>
                        <interactivity:InvokeCommandAction Command="{x:Bind ViewModel.RefreshBoardTabItemsCommand}" />
                    </interactivity:EventTriggerBehavior.Actions>
                </interactivity:EventTriggerBehavior>
            </interactivity:Interaction.Behaviors>-->
        </controls:Segmented>
        <!--  板块内容  -->
        <UserControl Grid.Row="1" Content="{x:Bind ViewModel.CurrentBoardTabItemListView, Mode=OneWay}">
            <UserControl.RenderTransform>
                <TranslateTransform x:Name="BoardSwitchTranslation" />
            </UserControl.RenderTransform>
        </UserControl>

        <!--  主题内容  -->
        <controls:SwitchPresenter
            Grid.RowSpan="2"
            Grid.Column="1"
            TargetType="vm:PageStatus"
            Value="{x:Bind ViewModel.PageStatus, Mode=OneWay}">
            <controls:Case Value="Idle" />
            <controls:Case Value="Success">
                <ScrollViewer
                    x:Name="ThreadContentScrollViewer"
                    Margin="0,10,0,0"
                    Padding="0,0,10,0">
                    <StackPanel Spacing="10" Visibility="{x:Bind ViewModel.CurrentThread, Converter={StaticResource Null2Visibility}, Mode=OneWay}">
                        <controls:DockPanel HorizontalSpacing="10" LastChildFill="False">
                            <PersonPicture
                                Height="36"
                                VerticalAlignment="Top"
                                helpers:PersonPictureCacheHelper.ProfilePictureEx="{x:Bind ViewModel.CurrentThread.UserAvatar, Mode=OneWay}" />
                            <!--  昵称、签名  -->
                            <StackPanel VerticalAlignment="Center" Spacing="3">
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <TextBlock FontWeight="SemiBold" Text="{x:Bind ViewModel.CurrentThread.Username, Mode=OneWay}" />
                                    <!--  等级（如：Lv.x）  -->
                                    <Border
                                        Background="{ThemeResource SystemFillColorSuccessBrush}"
                                        CornerRadius="3"
                                        Visibility="{x:Bind ViewModel.CurrentThread.UserLevel, Converter={StaticResource DoubleToVisibilityConverter}, Mode=OneWay}">
                                        <TextBlock
                                            Margin="3,0"
                                            Padding="0,1,0,0"
                                            FontSize="12"
                                            Foreground="White"
                                            Text="{x:Bind ViewModel.CurrentThread.UserLevel, Mode=OneWay, Converter={StaticResource StringFormatConverter}, ConverterParameter='Lv.{0}'}" />
                                    </Border>
                                    <!--  用户组（如：管理员）  -->
                                    <Border Background="{ThemeResource AccentTextFillColorTertiaryBrush}" CornerRadius="3">
                                        <TextBlock
                                            Margin="3,0"
                                            Padding="0,1,0,0"
                                            FontSize="11"
                                            Foreground="White"
                                            Text="{x:Bind ViewModel.CurrentThread.UserGroup, Mode=OneWay}"
                                            Visibility="{x:Bind ViewModel.CurrentThread.UserGroup, Converter={StaticResource StringVisibilityConverter}, Mode=OneWay}" />
                                    </Border>
                                </StackPanel>
                                <TextBlock
                                    FontSize="12"
                                    Foreground="Gray"
                                    Text="{x:Bind ViewModel.CurrentThread.CreateTime, Converter={StaticResource Date2RelativeStringConverter}, Mode=OneWay}" />
                            </StackPanel>
                            <!--  操作按钮  -->
                            <StackPanel
                                controls:DockPanel.Dock="Right"
                                Orientation="Horizontal"
                                Spacing="-2">
                                <AppBarButton
                                    Width="40"
                                    Height="47"
                                    Margin="0,-6,-2,-13"
                                    HorizontalAlignment="Right"
                                    CornerRadius="0"
                                    Icon="Like"
                                    ToolTipService.ToolTip="点赞"
                                    Visibility="{x:Bind ViewModel.IsCurrentThreadFromUs, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=True, Mode=OneWay}" />
                                <AppBarButton
                                    Width="40"
                                    Height="47"
                                    Margin="0,-6,-2,-13"
                                    HorizontalAlignment="Right"
                                    CornerRadius="0"
                                    Icon="Dislike"
                                    ToolTipService.ToolTip="点踩"
                                    Visibility="{x:Bind ViewModel.IsCurrentThreadFromUs, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=True, Mode=OneWay}" />
                                <AppBarButton
                                    Width="40"
                                    Height="47"
                                    Margin="0,-6,-2,-13"
                                    HorizontalAlignment="Right"
                                    CornerRadius="0"
                                    Icon="{ui:FontIcon Glyph=&#xED1A;}"
                                    ToolTipService.ToolTip="插眼" />
                                <AppBarButton
                                    Width="40"
                                    Height="47"
                                    Margin="0,-6,-2,-13"
                                    HorizontalAlignment="Right"
                                    CornerRadius="0"
                                    Icon="Favorite"
                                    ToolTipService.ToolTip="收藏"
                                    Visibility="{x:Bind ViewModel.IsCurrentThreadFromUs, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=True, Mode=OneWay}" />
                                <AppBarButton
                                    Width="40"
                                    Height="47"
                                    Margin="0,-6,-2,-13"
                                    HorizontalAlignment="Right"
                                    CornerRadius="0"
                                    Icon="Memo"
                                    ToolTipService.ToolTip="备份" />
                                <AppBarButton
                                    Width="40"
                                    Height="47"
                                    Margin="0,-6,-2,-13"
                                    HorizontalAlignment="Right"
                                    CornerRadius="0"
                                    Icon="{ui:FontIcon Glyph=&#xE932;}"
                                    ToolTipService.ToolTip="编辑"
                                    Visibility="{x:Bind ViewModel.IsCurrentThreadFromUs, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}" />
                                <AppBarButton
                                    Width="40"
                                    Height="47"
                                    Margin="0,-6,-2,-13"
                                    HorizontalAlignment="Right"
                                    CornerRadius="0"
                                    Icon="Delete"
                                    ToolTipService.ToolTip="删除"
                                    Visibility="{x:Bind ViewModel.IsCurrentThreadFromUs, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}" />
                                <AppBarButton
                                    Width="40"
                                    Height="47"
                                    Margin="0,-6,-2,-13"
                                    HorizontalAlignment="Right"
                                    CornerRadius="0"
                                    Icon="ReportHacked"
                                    ToolTipService.ToolTip="举报"
                                    Visibility="{x:Bind ViewModel.IsCurrentThreadFromUs, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=True, Mode=OneWay}" />
                                <AppBarButton
                                    Width="40"
                                    Height="47"
                                    Margin="0,-6,-2,-13"
                                    HorizontalAlignment="Right"
                                    CornerRadius="0"
                                    Icon="{ui:FontIcon Glyph=&#xF406;}"
                                    ToolTipService.ToolTip="截屏" />
                                <AppBarButton
                                    Width="40"
                                    Height="47"
                                    Margin="0,-6,-2,-13"
                                    HorizontalAlignment="Right"
                                    CornerRadius="0"
                                    Icon="Globe"
                                    ToolTipService.ToolTip="在浏览器中打开" />
                                <AppBarButton
                                    Width="40"
                                    Height="47"
                                    Margin="0,-6,-2,-13"
                                    HorizontalAlignment="Right"
                                    CornerRadius="0"
                                    Icon="{ui:FontIcon Glyph=&#xE82E;}"
                                    ToolTipService.ToolTip="添加到淘专辑" />
                                <AppBarButton
                                    Width="40"
                                    Height="47"
                                    Margin="0,-6,-2,-13"
                                    HorizontalAlignment="Right"
                                    CornerRadius="0"
                                    Icon="Share"
                                    ToolTipService.ToolTip="分享" />
                            </StackPanel>
                        </controls:DockPanel>
                        <!--  标题  -->
                        <TextBlock
                            controls:DockPanel.Dock="Bottom"
                            FontSize="20"
                            Text="{x:Bind ViewModel.CurrentThread.Title, Mode=OneWay}" />
                        <!--  主题内容  -->
                        <local_controls:ThreadContentControl Contents="{x:Bind ViewModel.CurrentThread.Contents, Mode=OneWay}" />
                        <!--  评论  -->
                        <!--<ListView
                            IsItemClickEnabled="True"
                            ItemsSource="{x:Bind Replies, Mode=OneWay}"
                            ScrollViewer.VerticalScrollBarVisibility="Hidden"
                            SelectionMode="None">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="Padding" Value="0" />
                                    <Setter Property="Margin" Value="0,0,0,10" />
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <ItemsStackPanel />
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="thread:ThreadReply">
                                    <TextBlock Text="{x:Bind QuoteContent, Mode=OneWay}" />
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>-->
                    </StackPanel>
                </ScrollViewer>
            </controls:Case>
            <controls:Case Value="Loading">
                <AnimatedVisualPlayer Width="260">
                    <animatedvisuals:AmS7nmujvm />
                </AnimatedVisualPlayer>
            </controls:Case>
            <controls:Case Value="Timeout">
                <AnimatedVisualPlayer Width="150">
                    <animatedvisuals:CryingEmoji />
                </AnimatedVisualPlayer>
            </controls:Case>
            <controls:Case Value="Error">
                <AnimatedVisualPlayer Width="150">
                    <animatedvisuals:CryingEmoji />
                </AnimatedVisualPlayer>
            </controls:Case>
        </controls:SwitchPresenter>

        <!--  分割线  -->
        <controls:GridSplitter
            Grid.Row="1"
            Grid.Column="1"
            Width="3"
            MinWidth="1"
            Margin="0,10"
            HorizontalAlignment="Left"
            HorizontalContentAlignment="Left"
            Foreground="Transparent"
            ResizeBehavior="BasedOnAlignment"
            ResizeDirection="Auto">
            <controls:GridSplitter.RenderTransform>
                <TranslateTransform X="-10" />
            </controls:GridSplitter.RenderTransform>
        </controls:GridSplitter>
    </Grid>
</Page>
