<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Uestc.BBS.WinUI.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Uestc.BBS.WinUI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <SelectorBar x:Name="SelectorBar2" Grid.Column="0">
            <SelectorBarItem
                x:Name="SelectorBarItemPage1"
                Margin="-3,0"
                IsSelected="True"
                Text="最新发表" />
            <SelectorBarItem
                x:Name="SelectorBarItemPage2"
                Margin="-3,0"
                Text="最新回复" />
            <SelectorBarItem
                x:Name="SelectorBarItemPage3"
                Margin="-3,0"
                Text="热门" />
            <SelectorBarItem
                x:Name="SelectorBarItemPage4"
                Margin="-3,0"
                Text="精华" />
            <SelectorBarItem
                x:Name="SelectorBarItemPage5"
                Margin="-3,0"
                Text="淘专辑" />
        </SelectorBar>
    </Grid>
</Page>
