<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Uestc.BBS.WinUI.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:converters="using:CommunityToolkit.WinUI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:forum="using:Uestc.BBS.Core.Services.Api.Forum"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:local_controls="using:Uestc.BBS.WinUI.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Uestc.BBS.Mvvm.Models"
    xmlns:ui="using:CommunityToolkit.WinUI"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="330" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Margin="10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <controls:Segmented
                HorizontalAlignment="Center"
                ItemsSource="{x:Bind ViewModel.AppSettingModel.Apperance.BoardTabItems, Mode=OneWay}"
                SelectedItem="{x:Bind ViewModel.CurrentBoardTabItemModel, Mode=TwoWay}"
                Style="{StaticResource PivotSegmentedStyle}">
                <controls:Segmented.ItemTemplate>
                    <DataTemplate x:DataType="models:BoardTabItemModel">
                        <TextBlock
                            Width="auto"
                            Margin="-3,0"
                            Text="{x:Bind Name}" />
                    </DataTemplate>
                </controls:Segmented.ItemTemplate>
            </controls:Segmented>
            <ListView
                Grid.Row="1"
                Margin="0,10"
                ItemsSource="{x:Bind ViewModel.BoardTabItems[0].Item2, Mode=OneWay}"
                ScrollViewer.VerticalScrollBarVisibility="Hidden">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="forum:TopicOverview">
                        <local_controls:TopicOverview Title="{x:Bind Title, Mode=OneWay}" />
                    </DataTemplate>
                    <!--<DataTemplate x:DataType="forum:TopicOverview">
    <local_controls:TopicOverview
        Title="{Binding Title}"
        Avatar="{x:Bind UserAvatar}"
        BoardName="{x:Bind BoardName}"
        Date="{x:Bind DateTime}"
        Likes="{x:Bind Likes}"
        PreviewSource="{x:Bind PreviewSource}"
        Replies="{x:Bind Replies}"
        Subject="{x:Bind Subject}"
        Username="{x:Bind UserNickName}"
        Views="{x:Bind Views}" />
</DataTemplate>-->
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <StackPanel Grid.Column="1">
            <local_controls:PersonProfile
                Name="{x:Bind ViewModel.AppSettingModel.Auth.DefaultCredential.Name, Mode=OneWay}"
                MaxWidth="300"
                Avatar="{x:Bind ViewModel.AppSettingModel.Auth.DefaultCredential.Avatar, Mode=OneWay}"
                Group="{x:Bind ViewModel.AppSettingModel.Auth.DefaultCredential.Group, Mode=OneWay}"
                Level="{x:Bind ViewModel.AppSettingModel.Auth.DefaultCredential.Level, Mode=OneWay}"
                Signature="{x:Bind ViewModel.AppSettingModel.Auth.DefaultCredential.Signature, Mode=OneWay}" />
        </StackPanel>

        <controls:GridSplitter
            Grid.Column="1"
            Width="3"
            MinWidth="1"
            Margin="0,10"
            HorizontalAlignment="Left"
            HorizontalContentAlignment="Left"
            Foreground="Transparent"
            ResizeBehavior="BasedOnAlignment"
            ResizeDirection="Auto">
            <controls:GridSplitter.RenderTransform>
                <TranslateTransform X="-10" />
            </controls:GridSplitter.RenderTransform>
        </controls:GridSplitter>

    </Grid>
</Page>
