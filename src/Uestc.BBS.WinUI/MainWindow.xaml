<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="Uestc.BBS.WinUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Uestc.BBS.WinUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="清水河畔"
    mc:Ignorable="d">

    <Window.SystemBackdrop>
        <MicaBackdrop Kind="Base" />
    </Window.SystemBackdrop>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="47" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <controls:DockPanel
            Grid.Row="0"
            Margin="0,0,160,0"
            VerticalAlignment="Center">
            <TextBlock Text="清水河畔" />
            <PersonPicture
                Height="35"
                controls:DockPanel.Dock="Right"
                ProfilePicture="https://image.krins.cloud/%E5%A4%B4%E5%83%8F.jpg" />
            <TextBox MaxWidth="500" PlaceholderText="我曾天真地以为，小时候的梦想每一个都会实现，直到我慢慢地长大……" />
        </controls:DockPanel>
        <NavigationView
            x:Name="nvSample"
            Grid.Row="1"
            CompactPaneLength="60"
            CompositeMode="Inherit"
            IsBackButtonVisible="Collapsed"
            IsPaneOpen="False"
            IsPaneToggleButtonVisible="False">
            <NavigationView.MenuItems>
                <NavigationViewItem Height="60">
                    <NavigationViewItem.Content>
                        <StackPanel HorizontalAlignment="Center" Spacing="4">
                            <FontIcon Glyph="&#xE74C;" />
                            <TextBlock FontSize="12" Text="首页" />
                        </StackPanel>
                    </NavigationViewItem.Content>
                </NavigationViewItem>
                <NavigationViewItem Height="60">
                    <NavigationViewItem.Content>
                        <StackPanel Orientation="Vertical">
                            <FontIcon Glyph="&#xE74C;" />
                            <TextBlock Text="版 块" />
                        </StackPanel>
                    </NavigationViewItem.Content>
                </NavigationViewItem>
                <NavigationViewItem
                    Content="服 务"
                    Icon="Home"
                    Tag="SamplePage2" />
                <NavigationViewItem
                    Content="动 态"
                    Icon="Refresh"
                    Tag="SamplePage3" />
                <NavigationViewItem Content="发 布" Tag="SamplePage3" />
            </NavigationView.MenuItems>
            <NavigationView.FooterMenuItems>
                <NavigationViewItem
                    Content="Menu Item4"
                    Icon="Message"
                    Tag="SamplePage4" />
            </NavigationView.FooterMenuItems>
            <Frame x:Name="contentFrame" />
        </NavigationView>
    </Grid>


</Window>
