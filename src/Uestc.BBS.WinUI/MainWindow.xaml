<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="Uestc.BBS.WinUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:core="using:Uestc.BBS.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ic="using:FluentIcons.WinUI"
    xmlns:local="using:Uestc.BBS.WinUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="清水河畔"
    mc:Ignorable="d">

    <Window.SystemBackdrop>
        <MicaBackdrop Kind="Base" />
    </Window.SystemBackdrop>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="47" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!--  标题栏  -->
        <controls:DockPanel Grid.Row="0" Margin="10,0,160,0">
            <ImageIcon Height="18" Source="Assets/Icons/app.ico" />
            <TextBlock
                Margin="10,0"
                Padding="0,0,0,1"
                VerticalAlignment="Center"
                FontFamily="Consolas"
                FontSize="13"
                Text="清水河畔" />
            <PersonPicture
                Height="35"
                controls:DockPanel.Dock="Right"
                ProfilePicture="https://bbs.uestc.edu.cn/uc_server/data/avatar/000/28/89/65_avatar_middle.jpg" />
            <AutoSuggestBox
                MaxWidth="500"
                VerticalAlignment="Center"
                PlaceholderText="{x:Bind _viewModel.SearchPlaceholderText, Mode=OneWay}"
                QueryIcon="Find" />
        </controls:DockPanel>
        <!--  导航栏  -->
        <NavigationView
            x:Name="nvSample"
            Grid.Row="1"
            CompactPaneLength="70"
            CompositeMode="Inherit"
            IsBackButtonVisible="Collapsed"
            IsPaneOpen="False"
            IsPaneToggleButtonVisible="False"
            IsSettingsVisible="False">
            <NavigationView.MenuItems>
                <NavigationViewItem Height="68" Margin="0,0,0,5">
                    <NavigationViewItem.Content>
                        <StackPanel
                            Padding="-10,0,0,0"
                            HorizontalAlignment="Center"
                            Spacing="4">
                            <ic:SymbolIcon FontSize="26" Symbol="Home" />
                            <TextBlock FontSize="14" Text="首 页" />
                        </StackPanel>
                    </NavigationViewItem.Content>
                </NavigationViewItem>
                <NavigationViewItem Height="68" Margin="0,0,0,5">
                    <NavigationViewItem.Content>
                        <StackPanel
                            Padding="-10,0,0,0"
                            HorizontalAlignment="Center"
                            Spacing="4">
                            <ic:SymbolIcon FontSize="26" Symbol="Apps" />
                            <TextBlock FontSize="14" Text="板 块" />
                        </StackPanel>
                    </NavigationViewItem.Content>
                </NavigationViewItem>
                <NavigationViewItem Height="68" Margin="0,0,0,5">
                    <NavigationViewItem.Content>
                        <StackPanel
                            Padding="-10,0,0,0"
                            HorizontalAlignment="Center"
                            Spacing="4">
                            <ic:SymbolIcon FontSize="26" Symbol="Rocket" />
                            <TextBlock FontSize="14" Text="服 务" />
                        </StackPanel>
                    </NavigationViewItem.Content>
                </NavigationViewItem>
                <NavigationViewItem Height="68" Margin="0,0,0,5">
                    <NavigationViewItem.Content>
                        <StackPanel
                            Padding="-10,0,0,0"
                            HorizontalAlignment="Center"
                            Spacing="4">
                            <ic:SymbolIcon FontSize="26" Symbol="Scan" />
                            <TextBlock FontSize="14" Text="动 态" />
                        </StackPanel>
                    </NavigationViewItem.Content>
                </NavigationViewItem>
                <NavigationViewItem Height="68" Margin="0,0,0,5">
                    <NavigationViewItem.Content>
                        <StackPanel
                            Padding="-10,0,0,0"
                            HorizontalAlignment="Center"
                            Spacing="4">
                            <ic:SymbolIcon FontSize="26" Symbol="SaveCopy" />
                            <TextBlock FontSize="14" Text="发 布" />
                        </StackPanel>
                    </NavigationViewItem.Content>
                </NavigationViewItem>
            </NavigationView.MenuItems>
            <NavigationView.FooterMenuItems>
                <!--  消息  -->
                <NavigationViewItem Height="68" Margin="0,0,0,5">
                    <NavigationViewItem.Content>
                        <StackPanel
                            Padding="-10,0,0,0"
                            HorizontalAlignment="Center"
                            Spacing="4">
                            <ic:SymbolIcon FontSize="26" Symbol="Mail" />
                            <TextBlock FontSize="14" Text="消 息" />
                        </StackPanel>
                    </NavigationViewItem.Content>
                </NavigationViewItem>
                <!--  设置  -->
                <NavigationViewItem Height="68">
                    <NavigationViewItem.Content>
                        <StackPanel
                            Padding="-10,0,0,0"
                            HorizontalAlignment="Center"
                            Spacing="4">
                            <ic:SymbolIcon FontSize="26" Symbol="Settings" />
                            <TextBlock FontSize="14" Text="设 置" />
                        </StackPanel>
                    </NavigationViewItem.Content>
                </NavigationViewItem>
            </NavigationView.FooterMenuItems>
            <Frame x:Name="contentFrame" />
        </NavigationView>
    </Grid>
</Window>
