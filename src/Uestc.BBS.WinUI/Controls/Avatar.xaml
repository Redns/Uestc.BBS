<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="Uestc.BBS.WinUI.Controls.Avatar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Uestc.BBS.WinUI.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Border
        Width="{x:Bind Size, Mode=OneWay}"
        Height="{x:Bind Size, Mode=OneWay}"
        CornerRadius="{x:Bind CornerRadius, Mode=OneWay}">
        <local:AdvancedImage
            IsCachedEnable="{x:Bind IsCachedEnable, Mode=OneWay}"
            IsLazyLoadEnable="{x:Bind IsLazyLoadEnable, Mode=OneWay}"
            Source="{x:Bind Source, Mode=OneWay}"
            Stretch="{x:Bind Stretch, Mode=OneWay}" />
    </Border>
</UserControl>