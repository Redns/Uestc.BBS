<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="Uestc.BBS.WinUI.Controls.BoardTabItemListView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animatedvisuals="using:AnimatedVisuals"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:converters="using:CommunityToolkit.WinUI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lc="using:Uestc.BBS.WinUI.Converters"
    xmlns:local="using:Uestc.BBS.WinUI.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:thread="using:Uestc.BBS.Sdk.Services.Thread"
    xmlns:ui="using:CommunityToolkit.WinUI"
    mc:Ignorable="d">

    <UserControl.Resources />

    <controls:SwitchPresenter TargetType="local:BoardStatus" Value="{x:Bind Status, Mode=OneWay}">
        <controls:Case Value="Normal">
            <Grid>
                <ListView
                    IsItemClickEnabled="True"
                    ItemClick="SelectedThreadChanged"
                    ItemsSource="{x:Bind Threads}"
                    ScrollViewer.VerticalScrollBarVisibility="Hidden"
                    SelectionMode="None">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Padding" Value="0" />
                            <Setter Property="Margin" Value="0,0,0,10" />
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsStackPanel />
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="thread:ThreadOverview">
                            <local:ThreadOverviewControl
                                Title="{x:Bind Title}"
                                Avatar="{x:Bind UserAvatar}"
                                BoardName="{x:Bind BoardName}"
                                Date="{x:Bind DateTime}"
                                HasVote="{x:Bind HasVote}"
                                IsHot="{x:Bind IsHot}"
                                Likes="{x:Bind LikeCount}"
                                PreviewSources="{x:Bind PreviewImageSources}"
                                Replies="{x:Bind ReplyCount}"
                                Subject="{x:Bind Subject}"
                                Username="{x:Bind Username}"
                                Views="{x:Bind ViewCount}" />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <ProgressRing
                    Margin="0,20,0,0"
                    VerticalAlignment="Top"
                    IsActive="{x:Bind Threads.IsLoading, Mode=OneWay}" />
            </Grid>
        </controls:Case>
        <controls:Case Value="Error">
            <StackPanel Padding="10,0" VerticalAlignment="Center">
                <AnimatedVisualPlayer Width="120" Margin="0,-100,0,0">
                    <animatedvisuals:CryingEmoji />
                </AnimatedVisualPlayer>
                <TextBlock
                    FontSize="15"
                    Text="{x:Bind AlertMessage, Mode=OneWay}"
                    TextAlignment="Center"
                    TextWrapping="WrapWholeWords" />
            </StackPanel>
        </controls:Case>
    </controls:SwitchPresenter>

</UserControl>
