<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="Uestc.BBS.WinUI.Controls.AdvancedImage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animatedvisuals="using:AnimatedVisuals"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Uestc.BBS.WinUI.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <controls:SwitchPresenter
        Width="{x:Bind Width, Mode=OneWay}"
        Height="{x:Bind Height, Mode=OneWay}"
        MaxWidth="{x:Bind MaxWidth, Mode=OneWay}"
        MaxHeight="{x:Bind MaxHeight, Mode=OneWay}"
        TargetType="local:ImageStatus"
        Value="{x:Bind Status, Mode=OneWay}">
        <controls:Case Value="Idle" />
        <controls:Case Value="Loading">
            <AnimatedVisualPlayer Stretch="{x:Bind Stretch, Mode=OneWay}">
                <animatedvisuals:SendButton />
            </AnimatedVisualPlayer>
        </controls:Case>
        <controls:Case Value="Success">
            <Image x:Name="SuccessImage" Stretch="{x:Bind Stretch, Mode=OneWay}" />
        </controls:Case>
        <controls:Case Value="Timeout" />
        <controls:Case Value="Error" />
    </controls:SwitchPresenter>
</UserControl>
