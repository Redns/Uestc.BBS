<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="Uestc.BBS.WinUI.Controls.AdvancedImage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animatedvisuals="using:AnimatedVisuals"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:converters="using:CommunityToolkit.WinUI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:labs="using:CommunityToolkit.Labs.WinUI"
    xmlns:local="using:Uestc.BBS.WinUI.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </UserControl.Resources>

    <controls:SwitchPresenter TargetType="local:ImageStatus" Value="{x:Bind Status, Mode=OneWay}">
        <controls:Case Value="Loading">
            <labs:Shimmer
                Width="{x:Bind PlaceholderWidth, Mode=OneWay}"
                Height="{x:Bind PlaceholderHeight, Mode=OneWay}"
                Visibility="{x:Bind ShowPlaceholder, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}" />
        </controls:Case>
        <controls:Case Value="Success">
            <Image Source="{x:Bind SuccessImageSource, Mode=OneWay}" Stretch="{x:Bind Stretch, Mode=OneWay}" />
        </controls:Case>
        <controls:Case Value="Error">
            <Image Source="/Assets/Images/image_load_failed.svg" Stretch="Uniform" />
        </controls:Case>
    </controls:SwitchPresenter>

</UserControl>
