<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="Uestc.BBS.WinUI.Controls.TopicOverview"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Uestc.BBS.WinUI.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Border
        Padding="10"
        Background="{ThemeResource SolidBackgroundFillColorQuarternaryBrush}"
        CornerRadius="10">
        <StackPanel Spacing="8">
            <!--  头像、昵称、发布/回复时间、分区  -->
            <controls:DockPanel HorizontalSpacing="10">
                <PersonPicture
                    Width="36"
                    VerticalAlignment="Center"
                    controls:DockPanel.Dock="Left"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    ProfilePicture="{x:Bind Avatar}" />
                <StackPanel VerticalAlignment="Center" controls:DockPanel.Dock="Left">
                    <TextBlock Text="{x:Bind Username}" />
                    <TextBlock
                        FontSize="12"
                        Foreground="Gray"
                        Text="{x:Bind Date}" />
                </StackPanel>
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="12"
                    Foreground="{ThemeResource AccentTextFillColorTertiaryBrush}"
                    Text="{x:Bind BoardName}"
                    TextAlignment="Right" />
            </controls:DockPanel>
            <!--  标题、摘要  -->
            <TextBlock
                FontSize="16"
                Text="{x:Bind Title}"
                TextWrapping="Wrap" />
            <TextBlock
                Foreground="Gray"
                Text="{x:Bind Subject}"
                TextWrapping="Wrap" />
            <!--  预览图  -->
            <Border HorizontalAlignment="Left" CornerRadius="6">
                <Image
                    MaxHeight="180"
                    PointerPressed="Image_PointerPressed"
                    Source="{x:Bind PreviewSource}"
                    Stretch="Uniform" />
            </Border>
            <!--  浏览、点赞、评论  -->
            <Grid Margin="10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" Spacing="6">
                    <FontIcon FontSize="14" Glyph="&#xE7B3;" />
                    <TextBlock
                        Padding="0,0,0,1"
                        VerticalAlignment="Center"
                        Text="1063" />
                </StackPanel>
                <StackPanel
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal"
                    Spacing="6">
                    <FontIcon FontSize="14" Glyph="&#xE8BD;" />
                    <TextBlock
                        Padding="0,0,0,1"
                        VerticalAlignment="Center"
                        Text="7" />
                </StackPanel>
                <StackPanel
                    Grid.Column="2"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal"
                    Spacing="5">
                    <FontIcon FontSize="14" Glyph="&#xE8E1;" />
                    <TextBlock
                        Padding="0,0,0,1"
                        VerticalAlignment="Center"
                        Text="13" />
                </StackPanel>
            </Grid>
        </StackPanel>
    </Border>
</UserControl>
