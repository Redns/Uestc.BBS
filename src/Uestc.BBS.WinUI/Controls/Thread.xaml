<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="Uestc.BBS.WinUI.Controls.Thread"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:CommunityToolkit.WinUI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Uestc.BBS.WinUI.Controls"
    xmlns:local_controls="using:Uestc.BBS.WinUI.Controls"
    xmlns:local_converters="using:Uestc.BBS.WinUI.Converters"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Uestc.BBS.Mvvm.Models"
    xmlns:ui="using:CommunityToolkit.WinUI"
    mc:Ignorable="d">

    <UserControl.Resources>
        <converters:StringFormatConverter x:Key="StringFormatConverter" />
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:StringVisibilityConverter x:Key="StringVisibilityConverter" />
        <converters:DoubleToVisibilityConverter x:Key="DoubleToVisibilityConverter" GreaterThan="0" />
        <converters:EmptyStringToObjectConverter
            x:Key="EmptyStringToObjectConverter"
            EmptyValue="False"
            NotEmptyValue="True" />
        <local_converters:Null2Visibility x:Key="Null2Visibility" />
        <local_converters:Uint2Visibility x:Key="Uint2Visibility" />
        <local_converters:Double2GridLength x:Key="Double2GridLength" />
        <local_converters:UserGroup2Visibility x:Key="UserGroup2Visibility" />
        <local_converters:UserGroup2BadgeBrush x:Key="UserGroup2BadgeBrush" />
        <local_converters:UserLevel2BadgeBackground x:Key="UserLevel2BadgeBackground" />
        <local_converters:Date2RelativeStringConverter x:Key="Date2RelativeStringConverter" />
    </UserControl.Resources>

    <ListView
        IsItemClickEnabled="False"
        ItemsSource="{x:Bind ThreadReplies, Mode=OneWay}"
        ScrollViewer.VerticalScrollBarVisibility="Hidden"
        SelectionMode="None">
        <ListView.ItemContainerStyle>
            <Style TargetType="ListViewItem">
                <Setter Property="Padding" Value="0" />
                <Setter Property="Margin" Value="0,0,0,36" />
                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            </Style>
        </ListView.ItemContainerStyle>
        <ListView.ItemsPanel>
            <ItemsPanelTemplate>
                <ItemsStackPanel />
            </ItemsPanelTemplate>
        </ListView.ItemsPanel>
        <ListView.ItemTemplate>
            <DataTemplate x:DataType="models:ThreadReplyModel">
                <Grid ColumnSpacing="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <local_controls:Avatar
                        Grid.Column="0"
                        VerticalAlignment="Top"
                        Size="36"
                        Source="{x:Bind UserAvatar}" />
                    <StackPanel Grid.Column="1" Spacing="6">
                        <!--  用户名、等级、用户组  -->
                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <!--  用户名  -->
                            <TextBlock VerticalAlignment="Center" Text="{x:Bind Username}" />
                            <!--  等级（如：Lv.x）  -->
                            <Border
                                Height="18"
                                Padding="3,0"
                                Background="{x:Bind UserLevel, Converter={StaticResource UserLevel2BadgeBackground}}"
                                CornerRadius="3"
                                Visibility="{x:Bind UserLevel, Converter={StaticResource DoubleToVisibilityConverter}}">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    Foreground="White"
                                    Text="{x:Bind UserLevel, Converter={StaticResource StringFormatConverter}, ConverterParameter='Lv.{0}'}"
                                    TextLineBounds="Tight" />
                            </Border>
                            <!--  用户组（如：管理员）  -->
                            <Border
                                Height="18"
                                Padding="3,0"
                                Background="{x:Bind UserGroup, Converter={StaticResource UserGroup2BadgeBrush}}"
                                CornerRadius="3"
                                Visibility="{x:Bind UserGroup, Converter={StaticResource UserGroup2Visibility}}">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    Foreground="White"
                                    Text="{x:Bind UserGroup}"
                                    TextLineBounds="Tight" />
                            </Border>
                            <!--  楼主  -->
                            <Border
                                x:Name="ThreadMasterLabel"
                                Height="18"
                                Padding="3,0"
                                x:Load="{x:Bind IsFromThreadMaster}"
                                BorderBrush="#0067C0"
                                BorderThickness="1"
                                CornerRadius="3">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    Foreground="#0067C0"
                                    Text="楼主"
                                    TextLineBounds="Tight" />
                            </Border>
                        </StackPanel>
                        <!--  评论时间  -->
                        <TextBlock
                            Margin="0,-5,0,0"
                            HorizontalAlignment="Left"
                            FontSize="12"
                            Foreground="Gray"
                            Text="{x:Bind CreateTime, Converter={StaticResource Date2RelativeStringConverter}}"
                            ToolTipService.Placement="Right"
                            ToolTipService.ToolTip="{x:Bind CreateTime, Mode=OneWay}" />
                        <!--  引用内容  -->
                        <Border
                            x:Name="ThreadReplyQuoteReply"
                            Margin="2,5,0,0"
                            Padding="8"
                            x:Load="{x:Bind HasQuote}"
                            BorderBrush="#1976D2"
                            BorderThickness="2,0,0,0">
                            <StackPanel Spacing="5">
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <local_controls:Avatar Size="18" Source="{x:Bind QuoteUserAvatar}" />
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        FontWeight="SemiBold"
                                        Foreground="Gray"
                                        Text="{x:Bind QuoteUsername}"
                                        TextLineBounds="Tight" />
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        FontSize="12"
                                        Foreground="Gray"
                                        Text="{x:Bind CreateTime, Converter={StaticResource Date2RelativeStringConverter}}"
                                        TextLineBounds="Tight" />
                                </StackPanel>
                                <TextBlock
                                    Foreground="Gray"
                                    Text="{x:Bind QuoteContent, Mode=OneWay}"
                                    TextWrapping="Wrap" />
                            </StackPanel>
                        </Border>
                        <!--  评论内容  -->
                        <local_controls:RichText Margin="0,-10,0,0" Contents="{x:Bind Contents}" />
                        <!--  操作按钮  -->
                        <StackPanel Margin="0,8,0,0" Orientation="Horizontal">
                            <AppBarButton
                                Width="40"
                                Margin="0,-6,-2,-13"
                                Icon="Like"
                                Label="{x:Bind LikeCount, Mode=OneWay}"
                                LabelPosition="Collapsed"
                                ToolTipService.ToolTip="点赞" />
                            <AppBarButton
                                Width="40"
                                Margin="0,-6,-2,-13"
                                Icon="Dislike"
                                Label="{x:Bind DislikeCount, Mode=OneWay}"
                                LabelPosition="Collapsed"
                                ToolTipService.ToolTip="点踩" />
                            <AppBarButton
                                Width="40"
                                Margin="0,-6,-2,-13"
                                Icon="Comment"
                                Label="{x:Bind DislikeCount, Mode=OneWay}"
                                LabelPosition="Collapsed"
                                ToolTipService.ToolTip="回复" />
                            <AppBarButton
                                Width="40"
                                Margin="0,-6,-2,-13"
                                Icon="{ui:FontIcon Glyph=&#xE771;}"
                                Label="{x:Bind DislikeCount, Mode=OneWay}"
                                LabelPosition="Collapsed"
                                ToolTipService.ToolTip="点评" />
                            <AppBarButton
                                Width="40"
                                Margin="0,-6,-2,-13"
                                Icon="ReportHacked"
                                LabelPosition="Collapsed"
                                ToolTipService.ToolTip="举报" />
                        </StackPanel>
                    </StackPanel>
                    <!--  楼层  -->
                    <TextBlock
                        Grid.Column="2"
                        Foreground="Gray"
                        Text="{x:Bind Position, Converter={StaticResource StringFormatConverter}, ConverterParameter='#{0}'}" />
                </Grid>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</UserControl>
