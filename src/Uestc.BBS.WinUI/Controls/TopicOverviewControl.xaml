<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="Uestc.BBS.WinUI.Controls.TopicOverviewControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:converters="using:CommunityToolkit.WinUI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lc="using:Uestc.BBS.WinUI.Converters"
    xmlns:local="using:Uestc.BBS.WinUI.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <UserControl.Resources>
        <lc:TopicDate2StringConverter x:Key="TopicDate2StringConverter" />
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:StringVisibilityConverter x:Key="StringVisibilityConverter" />
    </UserControl.Resources>

    <Border
        Padding="10"
        Background="{ThemeResource SolidBackgroundFillColorQuarternaryBrush}"
        CornerRadius="10">
        <StackPanel Spacing="8">
            <!--  头像、昵称、发布/回复时间、分区  -->
            <controls:DockPanel HorizontalSpacing="10">
                <PersonPicture
                    Width="36"
                    VerticalAlignment="Center"
                    controls:DockPanel.Dock="Left"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    ProfilePicture="{x:Bind Avatar, Mode=OneWay}" />
                <StackPanel VerticalAlignment="Center" controls:DockPanel.Dock="Left">
                    <TextBlock Text="{x:Bind Username, Mode=OneWay}" />
                    <TextBlock
                        FontSize="12"
                        Foreground="Gray"
                        Text="{x:Bind Date, Converter={StaticResource TopicDate2StringConverter}, Mode=OneWay}" />
                </StackPanel>
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="12"
                    Foreground="{ThemeResource AccentTextFillColorTertiaryBrush}"
                    Text="{x:Bind BoardName, Mode=OneWay}"
                    TextAlignment="Right" />
            </controls:DockPanel>
            <!--  标题、摘要  -->
            <TextBlock
                FontSize="16"
                Text="{x:Bind Title, Mode=OneWay}"
                TextWrapping="Wrap" />
            <TextBlock
                Foreground="Gray"
                Text="{x:Bind Subject, Mode=OneWay}"
                TextWrapping="Wrap"
                Visibility="{x:Bind Subject, Converter={StaticResource StringVisibilityConverter}, Mode=OneWay}" />
            <TextBlock
                Foreground="Gray"
                Text="{x:Bind Summary, Mode=OneWay}"
                TextWrapping="Wrap"
                Visibility="{x:Bind Summary, Converter={StaticResource StringVisibilityConverter}, Mode=OneWay}" />
            <!--  预览图  -->
            <Border HorizontalAlignment="Left" CornerRadius="6">
                <Image
                    MaxHeight="200"
                    PointerPressed="OpenPreviewImage"
                    Source="{x:Bind PreviewSource, Mode=OneWay}"
                    Stretch="Uniform"
                    Visibility="{x:Bind PreviewSource, Converter={StaticResource StringVisibilityConverter}, Mode=OneWay}" />
            </Border>
            <!--  浏览、点赞、评论  -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <!--  浏览量  -->
                <StackPanel Orientation="Horizontal" Spacing="6">
                    <FontIcon
                        FontSize="14"
                        Foreground="#C99100"
                        Glyph="&#xECAD;"
                        Visibility="{x:Bind IsHot, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}" />
                    <TextBlock
                        Padding="0,0,0,1"
                        VerticalAlignment="Center"
                        Foreground="#C99100"
                        Text="{x:Bind Views}"
                        Visibility="{x:Bind IsHot, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}" />
                    <FontIcon
                        FontSize="14"
                        Glyph="&#xE7B3;"
                        Visibility="{x:Bind IsHot, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=true, Mode=OneWay}" />
                    <TextBlock
                        Padding="0,0,0,1"
                        VerticalAlignment="Center"
                        Text="{x:Bind Views, Mode=OneWay}"
                        Visibility="{x:Bind IsHot, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=true, Mode=OneWay}" />
                </StackPanel>
                <!--  回复数  -->
                <StackPanel
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal"
                    Spacing="6">
                    <FontIcon FontSize="14" Glyph="&#xE8BD;" />
                    <TextBlock
                        Padding="0,0,0,1"
                        VerticalAlignment="Center"
                        Text="{x:Bind Replies, Mode=OneWay}" />
                </StackPanel>
                <!--  点赞数  -->
                <StackPanel
                    Grid.Column="2"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal"
                    Spacing="5">
                    <FontIcon FontSize="14" Glyph="&#xE8E1;" />
                    <TextBlock
                        Padding="0,0,0,1"
                        VerticalAlignment="Center"
                        Text="{x:Bind Likes, Mode=OneWay}" />
                </StackPanel>
            </Grid>
        </StackPanel>
    </Border>
</UserControl>
