<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="Uestc.BBS.WinUI.Controls.ImageMosaic"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="using:Uestc.BBS.WinUI.Helpers"
    xmlns:local="using:Uestc.BBS.WinUI.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <UserControl.Resources>
        <!--  预览图像模板  -->
        <DataTemplate
            x:Key="FlipViewDataTemplete"
            x:Name="PreviewFlipViewDataTemplete"
            x:DataType="x:String">
            <local:AdvancedImage Source="{x:Bind}" Stretch="Uniform" />
        </DataTemplate>
    </UserControl.Resources>

</UserControl>
