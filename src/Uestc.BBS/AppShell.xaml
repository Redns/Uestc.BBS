<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Uestc.BBS.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Uestc.BBS.Views"
    Shell.FlyoutBehavior="Disabled">

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <Tab Title="首页">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage" />
        </Tab>
        <Tab Title="板块" >
            <ShellContent ContentTemplate="{DataTemplate local:HomePage}" Route="HomePage" />
        </Tab>
        <Tab Title="动态" />
        <Tab Title="我的" />
    </FlyoutItem>
    <ShellContent ContentTemplate="{DataTemplate local:MessagesPage}" Route="MessagesPage" />
</Shell>
