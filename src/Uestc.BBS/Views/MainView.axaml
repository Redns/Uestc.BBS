<UserControl
    x:Class="Uestc.BBS.Views.MainView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:assets="clr-namespace:Uestc.BBS.Assets.i18n"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ic="using:FluentIcons.Avalonia"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Uestc.BBS.ViewModels"
    d:DesignHeight="650"
    d:DesignWidth="1000"
    x:DataType="vm:MainViewModel"
    mc:Ignorable="d">

    <OnPlatform>
        <On Options="Windows,Linux,macOS">
            <Grid ColumnDefinitions="60,*">
                <!--  侧边导航栏  -->
                <DockPanel Grid.Column="0" Margin="10">
                    <Button
                        Classes="ToolbarIconButton"
                        Classes.Active="false"
                        Command="{Binding NavigateCommand}"
                        CommandParameter="Upload"
                        DockPanel.Dock="Top">
                        <StackPanel>
                            <ic:SymbolIcon Symbol="Home" />
                            <TextBlock Text="{x:Static assets:Resources.Menu_Toolbar_Home}" />
                        </StackPanel>
                    </Button>
                    <Button
                        Classes="ToolbarIconButton"
                        Classes.Active="false"
                        Command="{Binding NavigateCommand}"
                        CommandParameter="Plugins"
                        DockPanel.Dock="Top">
                        <StackPanel>
                            <ic:SymbolIcon Symbol="Apps" />
                            <TextBlock Text="{x:Static assets:Resources.Menu_Toolbar_Forums}" />
                        </StackPanel>
                    </Button>
                    <Button
                        Classes="ToolbarIconButton"
                        Classes.Active="false"
                        Command="{Binding NavigateCommand}"
                        CommandParameter="Plugins"
                        DockPanel.Dock="Top">
                        <StackPanel>
                            <ic:SymbolIcon Symbol="Rocket" />
                            <TextBlock Text="{x:Static assets:Resources.Menu_Toolbar_Services}" />
                        </StackPanel>
                    </Button>
                    <Button
                        Classes="ToolbarIconButton"
                        Classes.Active="false"
                        Command="{Binding NavigateCommand}"
                        CommandParameter="Plugins"
                        DockPanel.Dock="Top">
                        <StackPanel>
                            <ic:SymbolIcon Symbol="SaveCopy" />
                            <TextBlock Text="{x:Static assets:Resources.Menu_Toolbar_Post}" />
                        </StackPanel>
                    </Button>
                    <Button
                        Classes="ToolbarIconButton"
                        Classes.Active="false"
                        Command="{Binding NavigateCommand}"
                        CommandParameter="Settings"
                        DockPanel.Dock="Bottom">
                        <StackPanel>
                            <ic:SymbolIcon Symbol="Settings" />
                            <TextBlock Text="{x:Static assets:Resources.Menu_Toolbar_Settings}" />
                        </StackPanel>
                    </Button>
                    <Button
                        Classes="ToolbarIconButton"
                        Classes.Active="false"
                        Command="{Binding NavigateCommand}"
                        CommandParameter="Settings"
                        DockPanel.Dock="Bottom">
                        <StackPanel>
                            <ic:SymbolIcon Symbol="Mail" />
                            <TextBlock Text="{x:Static assets:Resources.Menu_Toolbar_Messages}" />
                        </StackPanel>
                    </Button>
                    <Border />
                </DockPanel>
                <!--  导航栏对应页面  -->
                <ContentControl
                    Grid.Column="1"
                    Margin="20,10,40,10"
                    Content="{Binding CurrentPage}" />
            </Grid>

        </On>
        <On Options="Android,iOS">
            <TextBlock Text="Hello, Mobile!" />
        </On>
    </OnPlatform>
</UserControl>
