<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:asyncImageLoader="using:Uestc.BBS.Desktop.Controls.AsyncImageLoader"
    xmlns:controls="using:Uestc.BBS.Desktop.Controls">

    <Design.PreviewWith>
        <StackPanel Width="400" Spacing="10">
            <StackPanel Background="{DynamicResource SystemRegionBrush}">
                <controls:Avatar />
            </StackPanel>
        </StackPanel>
    </Design.PreviewWith>

    <ControlTheme x:Key="{x:Type controls:Avatar}" TargetType="controls:Avatar">
        <Setter Property="Template">
            <ControlTemplate>
                <asyncImageLoader:AdvancedImage
                    Width="{TemplateBinding Width}"
                    Height="{Binding $self.Width}"
                    Clip="{TemplateBinding StreamGeometry}"
                    ClipToBounds="True"
                    IsLoadingVisible="{TemplateBinding IsLoadingVisible}"
                    Source="{TemplateBinding Source}"
                    Stretch="UniformToFill" />
            </ControlTemplate>
        </Setter>
    </ControlTheme>
</ResourceDictionary>
