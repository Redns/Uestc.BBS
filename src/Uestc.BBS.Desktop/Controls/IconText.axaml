<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Uestc.BBS.Desktop.Controls"
    xmlns:icon="using:FluentIcons.Avalonia">

    <Design.PreviewWith>
        <StackPanel Width="400" Spacing="10">
            <StackPanel Background="{DynamicResource SystemRegionBrush}">
                <controls:IconText />
            </StackPanel>
        </StackPanel>
    </Design.PreviewWith>

    <ControlTheme x:Key="{x:Type controls:IconText}" TargetType="controls:IconText">
        <Setter Property="Template">
            <ControlTemplate>
                <StackPanel Orientation="Horizontal" Spacing="5">
                    <icon:SymbolIcon FontSize="{TemplateBinding SymbolSize}" Symbol="{TemplateBinding Symbol}" />
                    <TextBlock
                        Padding="0,0,0,1"
                        VerticalAlignment="Center"
                        FontSize="{TemplateBinding TextSize}"
                        Text="{TemplateBinding Text}" />
                </StackPanel>
            </ControlTemplate>
        </Setter>
    </ControlTheme>
</ResourceDictionary>
