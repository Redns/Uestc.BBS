<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:fluent-icon="using:FluentIcons.Common"
    xmlns:ic="using:FluentIcons.Avalonia"
    xmlns:system="clr-namespace:System;assembly=netstandard">
    <!--  Add Resources Here  -->
    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Default">
            <!--  背景  -->
            <Color x:Key="BgWindow">#D8D8DA</Color>
            <!--  文本  -->
            <SolidColorBrush x:Key="TextPrimary" Color="#25262b" />
            <SolidColorBrush x:Key="TextSecondary" Color="#2B2D2D" />
            <!--  按钮  -->
            <SolidColorBrush x:Key="BtnDefault" Color="#f5f5f6" />
            <SolidColorBrush x:Key="BtnDefaultHover" Color="#F2F2F2" />
            <SolidColorBrush x:Key="BtnDefaultActive" Color="#e3e3e5" />
            <!--  主题图标 & Tips  -->
            <system:String x:Key="TipsThemeSwitch">切换至深色主题</system:String>
            <fluent-icon:Symbol x:Key="IconThemeSwitch">WeatherMoon</fluent-icon:Symbol>
        </ResourceDictionary>

        <!--  暗色主题  -->
        <ResourceDictionary x:Key="Dark">
            <Color x:Key="BgWindow">#2A2A2A</Color>
            <SolidColorBrush x:Key="BgSearchBox">#3E3E42</SolidColorBrush>
            <SolidColorBrush x:Key="TextPrimary" Color="White" />
            <SolidColorBrush x:Key="TextSecondary" Color="#606062" />
            <SolidColorBrush x:Key="BtnDefault" Color="#222226" />
            <SolidColorBrush x:Key="BtnDefaultHover" Color="#3E3E42" />
            <SolidColorBrush x:Key="BtnDefaultActive" Color="#3a3a3f" />
            <system:String x:Key="TipsThemeSwitch">切换至浅色主题</system:String>
            <fluent-icon:Symbol x:Key="IconThemeSwitch">WeatherSunny</fluent-icon:Symbol>
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>
</ResourceDictionary>
